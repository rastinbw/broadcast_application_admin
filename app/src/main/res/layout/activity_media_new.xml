<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.other.NewMediaActivity">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_simple_toolbar_2" />

    </LinearLayout>

    <com.mahta.rastin.broadcastapplicationadmin.custom.EditTextPlus
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/colorPrimaryLight"
        android:drawableLeft="@drawable/ic_label"
        android:drawableStart="@drawable/ic_label"
        android:hint=" عنوان"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:textColorHint="@android:color/white"
        android:textSize="16sp"
        app:fontEditText="shabnam.ttf"
        />

    <com.mahta.rastin.broadcastapplicationadmin.custom.EditTextPlus
        android:id="@+id/edt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimaryLight"
        android:hint=" توضیحات"
        android:layoutDirection="rtl"
        android:lines="2"
        android:padding="10dp"
        android:textColorHint="@android:color/white"
        android:textSize="14sp"
        app:fontEditText="shabnam.ttf"
        />

    <com.mahta.rastin.broadcastapplicationadmin.custom.ButtonPlus
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorGreen"
        android:text="انتخاب فایل"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</LinearLayout>