<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".activity.post.NewPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_simple_toolbar_2" />

        </LinearLayout>

        <com.mahta.rastin.broadcastapplicationadmin.custom.EditTextPlus
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="50"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_rounded_edit_text"
            android:drawableLeft="@drawable/ic_label"
            android:drawableStart="@drawable/ic_label"
            android:hint=" عنوان"
            android:layoutDirection="rtl"
            android:padding="10dp"
            android:textColorHint="@android:color/white"
            android:textSize="16sp"
            app:fontEditText="shabnam.ttf"
            />

        <com.mahta.rastin.broadcastapplicationadmin.custom.EditTextPlus
            android:id="@+id/edt_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:maxLength="150"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_rounded_edit_text"
            android:hint=" پیش نمایش"
            android:layoutDirection="rtl"
            android:lines="2"
            android:padding="10dp"
            android:textColorHint="@android:color/white"
            android:textSize="14sp"
            app:fontEditText="shabnam.ttf"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_rounded_edit_text"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.mahta.rastin.broadcastapplicationadmin.custom.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layoutDirection="rtl"
                android:text="گروه"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                app:fontTextView="shabnam.ttf"/>

            <Spinner
                android:id="@+id/spinner_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.mahta.rastin.broadcastapplicationadmin.custom.ButtonPlus
                android:id="@+id/btn_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rb_a"
                android:padding="10dp"
                android:text="دوشنبه"
                android:textSize="15sp"
                app:fontButton="shabnam.ttf"/>

            <com.mahta.rastin.broadcastapplicationadmin.custom.ButtonPlus
                android:id="@+id/btn_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rb_a"
                android:padding="10dp"
                android:text="یکشنبه"
                android:textSize="15sp"
                app:fontButton="shabnam.ttf"/>

            <com.mahta.rastin.broadcastapplicationadmin.custom.ButtonPlus
                android:id="@+id/btn_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rb_a"
                android:padding="10dp"
                android:text="شنبه"
                android:textSize="15sp"
                app:fontButton="shabnam.ttf"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.mahta.rastin.broadcastapplicationadmin.custom.ButtonPlus
                android:id="@+id/btn_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rb_a"
                android:padding="10dp"
                android:text="پنجشنبه"
                android:textSize="15sp"
                app:fontButton="shabnam.ttf"/>

            <com.mahta.rastin.broadcastapplicationadmin.custom.ButtonPlus
                android:id="@+id/btn_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rb_a"
                android:padding="10dp"
                android:text="چهارشنبه"
                android:textSize="15sp"
                app:fontButton="shabnam.ttf"/>

            <com.mahta.rastin.broadcastapplicationadmin.custom.ButtonPlus
                android:id="@+id/btn_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rb_a"
                android:padding="10dp"
                android:text="سه شنبه"
                android:textSize="15sp"
                app:fontButton="shabnam.ttf"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>