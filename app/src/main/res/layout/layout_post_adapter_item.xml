<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:focusable="true"
    android:orientation="vertical"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:id="@+id/lnlListItem"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="7dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.mahta.rastin.broadcastapplicationadmin.custom.TextViewPlus
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="موضوع اطلاعیه اینجاست"
                android:textColor="@color/colorPrimaryText"
                android:textSize="13sp"
                app:fontTextView="shabnam_bold.ttf"/>

            <com.mahta.rastin.broadcastapplicationadmin.custom.TextViewPlus
                android:id="@+id/txtPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lnlDate"
                android:layout_below="@+id/txtTitle"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines = "2"
                android:text="بخش پیش نمایش"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                app:fontTextView="shabnam.ttf"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txtPreview"
                android:background="@color/colorGray"/>

            <LinearLayout
                android:id="@+id/lnlDate"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.mahta.rastin.broadcastapplicationadmin.custom.TextViewPlus
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="دو روز پیش"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="11sp"
                    app:fontTextView="shabnam.ttf"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>