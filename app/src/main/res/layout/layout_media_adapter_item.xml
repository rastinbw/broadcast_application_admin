<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/lnlListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="7dp">

        <ImageButton
            android:id="@+id/imgbtn_delete"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rb_background"
            android:padding="4dp"
            android:src="@drawable/ic_delete"
            />

        <com.mahta.rastin.broadcastapplicationadmin.custom.TextViewPlus
            android:id="@+id/txtBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imgbtn_delete"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="موسیقی هفته بادبادک"
            android:textColor="@color/colorPrimaryText"
            android:textSize="13sp"
            app:fontTextView="shabnam_bold.ttf"/>

        <com.mahta.rastin.broadcastapplicationadmin.custom.TextViewPlus
            android:id="@+id/txtPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBack"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="4dp"
            android:layout_toStartOf="@id/imgbtn_delete"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines = "2"
            android:text="بخش پیش نمایش"
            android:textColor="@color/colorPrimaryText"
            android:textSize="12sp"
            app:fontTextView="shabnam.ttf"/>

        <View
            android:id="@+id/grayLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtPreview"
            android:background="@color/colorGray"/>

        <LinearLayout
            android:id="@+id/lnlDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/grayLine"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.mahta.rastin.broadcastapplicationadmin.custom.TextViewPlus
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="37dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="1397-12-06"
                android:textColor="@color/colorPrimaryText"
                android:textSize="11sp"
                app:fontTextView="shabnam.ttf"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

