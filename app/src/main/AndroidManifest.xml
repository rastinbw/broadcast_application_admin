<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mahta.rastin.broadcastapplicationadmin">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".global.G"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.startup.SplashActivity"
            android:theme="@style/AppTheme.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.main.MainActivity" />
        <activity android:name=".activity.startup.LoginActivity" />
        <activity android:name=".activity.main.PostListActivity" />
        <activity android:name=".activity.other.NewMediaActivity" />
        <activity android:name=".activity.main.ProgramListActivity" />
        <activity android:name=".activity.main.HelpActivity" />
        <activity android:name=".activity.other.NewPostActivity" />
        <activity android:name=".activity.other.EditPostActivity" />
        <activity android:name=".activity.other.EditProgramActivity" />
        <activity android:name=".activity.main.MediaListActivity" />
        <activity android:name=".activity.other.NewProgramActivity" />
        <activity android:name=".activity.other.EditMediaActivity"></activity>
    </application>

</manifest>